# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGO_URI=mongodb://localhost:27017/event-ticket-db
# For MongoDB Atlas, use: mongodb+srv://<username>:<password>@cluster.mongodb.net/event-ticket-db

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_make_it_strong_and_random_123456789
JWT_EXPIRE=7d

# Stripe Configuration (Test Mode)
# Get these from your Stripe Dashboard: https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# CORS Configuration
CLIENT_URL=http://localhost:3000

# Email Configuration (Optional - for future features)
EMAIL_FROM=noreply@eventticket.com
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads